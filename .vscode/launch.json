    "version": "0.2.0",
    "configurations": [
      {
        "name": "Attach to Chrome",
        "port": 9222,
        "request": "attach",
        "type": "pwa-chrome",
        "webRoot": "${workspaceFolder}"
      },
        {
            "type": "node",
            "request": "attach",
            "name": "Launch Emblem Finance Program",
            "skipFiles": [
              "<node_internals>/**"
            ],
            "port": 9229
          }, {
            "type": "pwa-node",
            "request": "launch",
            "name": "bip39",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/public/bip39/node-derive.js",
            
        }
    ]
}